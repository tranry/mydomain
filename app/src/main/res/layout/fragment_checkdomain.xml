<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    app:layoutDescription="@xml/fragment_event_scene5">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kiemtramien"
        android:textColor="#5F7298"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="422dp" />

    <EditText
        android:id="@+id/edtInputDomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="330dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/ic_baseline_toys_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Nhập tên miền"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="473dp" />

    <Button
        android:id="@+id/btnCheckDomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:background="@drawable/custom_button"
        android:text="Kiểm Tra"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@+id/edtInputDomain"
        tools:ignore="TextContrastCheck"
        tools:layout_editor_absoluteX="172dp" />

    <ImageView
        android:id="@+id/imgCheckDm"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/identity"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="447dp"
        android:layout_height="341dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="495dp">>

        <LinearLayout
            android:id="@+id/layoutDie"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TÊN MIỀN CHƯA ĐƯỢC ĐĂNG KÝ"
                android:textColor="@color/whites"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textNameDomain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mydomain.com"
                        android:textColor="@color/whites"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá : 20$"
                        android:textColor="#6B6488" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnCheckBuy"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/custom_buy"
                    android:text="Mua"
                    app:backgroundTint="@null"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutLive"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textDomainLive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tên miền đã đăng ký"
                android:textColor="#E44646"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.motion.widget.MotionLayout>