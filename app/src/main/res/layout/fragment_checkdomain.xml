<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    app:layoutDescription="@xml/fragment_event_scene5">


    <ImageView
        android:id="@+id/imgCheckDomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/identity"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KIỂM TRA TÊN MIỀN"
        android:textColor="#5F7298"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="827dp" />

    <EditText
        android:id="@+id/edtInputDomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="330dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/ic_baseline_toys_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Nhập tên miền"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="705dp" />

    <Button
        android:id="@+id/btnCheckDomain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Kiểm Tra"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="381dp"
        tools:layout_editor_absoluteY="949dp" />


    <TextView
        android:id="@+id/textKQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxWidth="150dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="-10dp"
        tools:layout_editor_absoluteY="526dp" />


</androidx.constraintlayout.motion.widget.MotionLayout>